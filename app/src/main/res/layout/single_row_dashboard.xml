<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bookcontent">

    <ImageView
        android:id="@+id/imgbook"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_book"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/txtrowitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="List Item"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imgbook"/>

    <TextView
        android:id="@+id/rating"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:text="4.5"
        android:textColor="#F6DE0A"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/txtauthorname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Name of the Author"
        android:textStyle="italic"
        android:textSize="10sp"
        android:textColor="#122333"
        android:layout_toRightOf="@+id/imgbook"
        android:layout_below="@+id/txtrowitem"/>

    <TextView
        android:id="@+id/txtprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rs.500/-"
        android:textSize="8sp"
        android:textColor="#2AAA07"
        android:padding="8dp"
        android:layout_toRightOf="@+id/imgbook"
        android:layout_below="@+id/txtauthorname"/>

</RelativeLayout>